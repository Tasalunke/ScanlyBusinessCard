<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topbck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    tools:context="com.trycatch_tanmay.scanlycard.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-250dp"
        android:gravity="center"
        android:text="Card Scanner"
        android:textColor="@color/gradient"
        android:textSize="45sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Bottom_card"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Mobile_Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:src="@drawable/mobilehold"
        app:layout_constraintBottom_toTopOf="@+id/Bottom_card"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/Bottom_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-55dp"
        android:src="@drawable/combinedshape"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:src="@drawable/camera"
        app:layout_constraintTop_toBottomOf="@+id/Mobile_Image" />

    <TextView
        android:id="@+id/first_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Scan and read business cards"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/camera" />

    <TextView
        android:id="@+id/second_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="with high accuracy"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/first_txt" />

    <ImageView
        android:id="@+id/nxt_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/second_txt" />



</androidx.constraintlayout.widget.ConstraintLayout>
