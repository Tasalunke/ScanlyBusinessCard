<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trycatch_tanmay.scanlycard.SignUpActivity">

    <ImageView
        android:id="@+id/signin_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="300dp"
        android:src="@drawable/signin"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sign_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/siginscreen"
        app:layout_constraintTop_toBottomOf="@+id/signin_img" />

    <EditText
        android:id="@+id/full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:hint="Full Name"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/sign_screen" />

    <EditText
        android:id="@+id/Email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Email "
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/full_name" />

        <EditText
            android:id="@+id/Passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Password "
            android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/Email_id" />

    <TextView
        android:id="@+id/hint_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Required minimum 6 Character in that one capital letter,"
        app:layout_constraintTop_toBottomOf="@+id/Passwd"
        android:paddingStart="20dp"/>
    <TextView
        android:id="@+id/hint_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="one small letter one special character,one number"
        app:layout_constraintTop_toBottomOf="@+id/hint_1"
        android:paddingStart="20dp"/>
    <EditText
        android:id="@+id/confirm_psswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Confirm Password "
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/hint_2" />
   <ImageView
       android:id="@+id/sign_btn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/signbtn"
       android:layout_marginRight="50dp"
       android:layout_marginLeft="50dp"
       app:layout_constraintTop_toBottomOf="@+id/confirm_psswd"/>
    <TextView
        android:id="@+id/back_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have a account"
        app:layout_constraintTop_toBottomOf="@+id/sign_btn"
        android:paddingStart="140dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>